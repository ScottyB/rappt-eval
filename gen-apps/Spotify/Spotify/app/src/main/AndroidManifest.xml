<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rappt.spotify.app">

<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name=".SpotifyApplication_"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme">
                <activity
                    android:label="@string/forgot_title"
                    android:name=".activities.ForgotActivity_">
                </activity>
                <activity
                    android:label="@string/login_title"
                    android:name=".activities.LoginActivity_">
                </activity>
                <activity
                    android:label="@string/app_name"
                    android:name=".activities.HomeActivity_">
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN" />
                        <category android:name="android.intent.category.LAUNCHER" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".activities.DrawerActivity_">
                </activity>

    </application>
</manifest>