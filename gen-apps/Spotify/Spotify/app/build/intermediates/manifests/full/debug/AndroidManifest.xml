<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rappt.spotify.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.rappt.spotify.app.SpotifyApplication_"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="com.rappt.spotify.app.activities.ForgotActivity_"
            android:label="@string/forgot_title" >
        </activity>
        <activity
            android:name="com.rappt.spotify.app.activities.LoginActivity_"
            android:label="@string/login_title" >
        </activity>
        <activity
            android:name="com.rappt.spotify.app.activities.HomeActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.rappt.spotify.app.activities.DrawerActivity_" >
        </activity>
    </application>

</manifest>